                    new { Num = 3, Icon = "M13.5 10.5h-7a1 1 0 000 2h7a1 1 0 000-2zM4 14.5a1 1 0 011-1h14a1 1 0 010 2H5a1 1 0 01-1-1zM10.5 4v16M13.5 4v16M21 12H3", Title = "Crie", Desc = "Comece a gerar conteúdo incrível com o poder da inteligência artificial." }
                };
            }

            @foreach (var step in steps)
            {
                <div class="p-8 rounded-2xl bg-gradient-card border border-accent-purple/20 shadow-lg">
                    <div class="mb-6 mx-auto w-16 h-16 flex items-center justify-center rounded-full border-4 border-accent-blue bg-accent-blue/20 text-accent-purple text-2xl font-bold">
                        @step.Num
                    </div>
                    <div class="mb-4 mx-auto w-12 h-12 text-accent-purple">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@step.Icon" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">@step.Title</h3>
                    <p class="text-gray-400 text-sm">@step.Desc</p>
                </div>
            }
        </div>

        <!-- Magic Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center text-left">
            <div>
                <h3 class="text-3xl font-bold mb-4">Veja a <span class="gradient-text">Magia</span> Acontecer</h3>
                <p class="text-lg text-gray-300 mb-6">
                    Nossa interface intuitiva torna a criação com IA simples e divertida. Basta digitar sua ideia e deixar nossa tecnologia fazer o resto.
                </p>
                <ul class="space-y-3 text-gray-300">
                    <li class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-purple" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                        <span>Interface drag-and-drop intuitiva</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-purple" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                        <span>Resultados em tempo real</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-purple" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                        <span>Múltiplos formatos de exportação</span>
                    </li>
                </ul>
            </div>
            
            <div class="p-6 rounded-2xl bg-gradient-to-br from-purple-800 to-indigo-900 shadow-2xl shadow-purple-800/50">
                <div class="bg-black/20 p-4 rounded-lg mb-4">
                    <p class="text-sm font-semibold text-accent-purple">Prompt:</p>
                    <textarea class="w-full bg-transparent border-none text-white focus:ring-0 resize-none text-base" rows="2" readonly>"Crie um artigo sobre as tendências de IA em 2024"</textarea>
                </div>
                <div class="bg-black/20 p-4 rounded-lg">
                    <p class="text-sm font-semibold text-accent-purple">Resultado:</p>
                    <p class="text-white">Artigo completo gerado em 3.2 segundos...</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="precos" class="py-20 bg-secondary-dark/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-4">Planos que <span class="gradient-text">Crescem</span> com Você</h2>
        <p class="text-lg text-gray-400 mb-12 max-w-3xl mx-auto">
            Escolha o plano perfeito para suas necessidades. Comece grátis e faça upgrade quando precisar de mais recursos.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-stretch">
            @{
                var plans = new[] {
                    new {
                        Title = "Starter",
                        Subtitle = "Perfeito para começar e explorar as funcionalidades.",
                        Price = "Grátis",
                        Features = new[] { "300 tokens ao criar a Conta", "Geração de texto básica", "Suporte por email", "Modelos básicos de IA" },
                        ButtonText = "Começar Grátis",
                        IsPopular = false
                    },
                    new {
                        Title = "Node",
                        Subtitle = "Flexibilidade ideal para usuários que necessitam de uma solução personalizada para seus negócios, idéias e projetos.",
                        Price = "Grátis",
                        Features = new[] { "Torne-se um Node e receba tokens", "Crie agentes inteligentes", "Geração de conteúdo personalizado", "Soberania total sobre seus dados", "Modelo genuinamente inteligente", "Construído com geração adaptativa", "Suporte técnico 24/7", "Integração ilimitada com seu Node", "Integração nativa via API" },
                        ButtonText = "Começar Grátis",
                        IsPopular = true
                    },
                    new {
                        Title = "Enterprise",
                        Subtitle = "Solução robusta, escalável e flexível para organizações que exigem alta demanda.",
                        Price = "Sob Consulta",
                        Features = new[] { "Orquestrador do ecossistema", "Automação inteligente", "Crie agentes inteligentes", "Modelo IA customizado", "Soberania sobre dados", "Modelo inteligente", "Geração adaptativa", "Suporte 24/7 com SLA", "Conectores personalizados", "Treinamento de equipe", "Governança e compliance", "Integração via API" },
                        ButtonText = "Fale com o Time de Vendas",
                        IsPopular = false
                    }
                };
            }

            @foreach(var plan in plans)
            {
                <div class="@(plan.IsPopular ? "border-4 border-accent-purple shadow-2xl shadow-accent-purple/50" : "border border-gray-700") p-8 rounded-3xl bg-primary-dark flex flex-col transition duration-300 hover:scale-[1.03] transform">
                    <div class="flex-grow">
                        @if (plan.IsPopular)
                        {
                            <span class="inline-block px-4 py-1 text-xs font-semibold rounded-full bg-accent-purple text-white mb-4">Mais Popular</span>
                        }
                        <h3 class="text-2xl font-bold mb-2 @(plan.IsPopular ? "gradient-text" : "text-white")">@plan.Title</h3>
                        <p class="text-gray-400 mb-6 text-sm">@plan.Subtitle</p>
                        
                        <div class="text-3xl font-extrabold mb-8 text-white">
                            @plan.Price
                        </div>
                        
                        <ul class="space-y-3 text-left mb-8">
                            @foreach (var feature in plan.Features)
                            {
                                <li class="flex items-start space-x-3 text-sm text-gray-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 text-accent-blue mt-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span>@feature</span>
                                </li>
                            }
                        </ul>
                    </div>
                    
                    <a href="#" class="mt-auto block w-full text-center px-6 py-3 font-bold rounded-full @(plan.IsPopular ? "bg-gradient-button hover:opacity-90" : "bg-white text-primary-dark hover:bg-gray-200") transition duration-300">
                        @plan.ButtonText
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section id="faq" class="py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-12">Perguntas <span class="gradient-text">Frequentes</span></h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto text-left">
            @{
                var faqs = new[] {
                    new { Q = "Posso cancelar a qualquer momento?", A = "Sim! Você pode cancelar seu plano a qualquer momento sem taxas ou multas." },
                    new { Q = "O que são tokens?", A = "Tokens são unidades de medida para o processamento de IA. Cada caractere ou palavra consome tokens." },
                    new { Q = "Há desconto para estudantes?", A = "Sim! Oferecemos 50% de desconto para estudantes com email .edu válido." },
                    new { Q = "Posso fazer upgrade do meu plano?", A = "Claro! Você pode fazer upgrade ou downgrade do seu plano a qualquer momento." }
                };
            }

            @foreach (var faq in faqs)
            {
                <div class="p-6 rounded-xl bg-secondary-dark/70 border border-gray-700 shadow-md">
                    <h4 class="text-xl font-semibold mb-3 text-white">@faq.Q</h4>
                    <p class="text-gray-400">@faq.A</p>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}