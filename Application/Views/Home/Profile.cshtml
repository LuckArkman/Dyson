@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="space-y-10 p-4 md:p-8">
    <h1 class="text-3xl font-bold text-white mb-6">Dashboard do Perfil</h1>
    <p class="text-text-muted">Gerencie suas informações pessoais, segurança e planos ativos.</p>

    <!-- Cartão de Informações Básicas do Usuário -->
    <div class="bg-secondary-dark p-6 rounded-xl shadow-lg border border-border-color">
        <h2 class="text-xl font-semibold text-white mb-4">Informações da Conta</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-text-muted">
            
            <!-- Avatar e Nome -->
            <div class="flex items-center space-x-4 border-b border-border-color pb-3 mb-3 md:col-span-2">
                <img src="https://placehold.co/100x100/1F2937/FFFFFF?text=AV" alt="Avatar do Usuário" class="w-16 h-16 rounded-full ring-2 ring-accent-purple/50">
                <div>
                    <p class="text-white font-bold text-lg">Nome do Usuário</p>
                    <p class="text-sm">Usuário ID: <span class="text-accent-blue">A001B93C4F</span></p>
                </div>
            </div>

            <!-- Detalhes da Conta -->
            <div>
                <p class="font-medium text-white">E-mail</p>
                <p>usuario.exemplo@dyson.com</p>
            </div>
            <div>
                <p class="font-medium text-white">Plano Atual</p>
                <p class="text-green-400 font-semibold">Plano Node</p>
            </div>
            <div>
                <p class="font-medium text-white">Data de Registro</p>
                <p>25/11/2025</p>
            </div>
            <div>
                <p class="font-medium text-white">Status</p>
                <p class="text-yellow-400">Ativo</p>
            </div>
        </div>
        
        <div class="mt-6">
            <button class="bg-accent-purple hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                Editar Perfil
            </button>
        </div>
    </div>

    <!-- Seção de Segurança -->
    <div class="bg-secondary-dark p-6 rounded-xl shadow-lg border border-border-color">
        <h2 class="text-xl font-semibold text-white mb-4">Segurança</h2>
        <div class="space-y-4">
            <div class="flex justify-between items-center border-b border-border-color pb-3">
                <p class="text-text-muted">Autenticação de Dois Fatores (2FA)</p>
                <button class="text-red-400 hover:text-red-500 font-semibold">
                    Configurar
                </button>
            </div>
            <div class="flex justify-between items-center">
                <p class="text-text-muted">Senha</p>
                <button class="text-accent-blue hover:text-blue-500 font-semibold">
                    Alterar Senha
                </button>
            </div>
        </div>
    </div>
</div>