@{
    ViewData["Title"] = "Dyson-Chat";
    Layout = "_Layout";
}

<div class="flex h-[calc(100vh-80px)] overflow-hidden bg-primary-dark relative">

    <main class="flex-1 flex flex-col min-w-0 bg-primary-dark relative z-0">
        
        <div class="h-16 flex items-center justify-between px-6 border-b border-gray-800 bg-primary-dark/95 backdrop-blur">
            <div class="flex items-center space-x-3">
                <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                <span class="text-white font-semibold text-lg">Dyson-AI Model <span class="text-xs text-accent-purple bg-accent-purple/10 px-2 py-0.5 rounded ml-2">v0.1</span></span>
            </div>
            <button id="mobile-history-toggle" class="md:hidden text-gray-300 hover:text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </button>
        </div>

        <div id="chat-container" class="flex-1 overflow-y-auto p-4 sm:p-6 space-y-6 scroll-smooth custom-scrollbar">
            <div id="welcome-message" class="text-center py-20 opacity-100 transition-opacity duration-500">
                <div class="w-20 h-20 bg-gradient-to-br from-accent-blue to-accent-purple rounded-2xl mx-auto flex items-center justify-center mb-6 shadow-lg shadow-accent-purple/30">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-white mb-2">Como posso ajudar hoje?</h2>
                <p class="text-gray-400">Pergunte sobre Smart Contracts, Smart Wallets, Smart Nodes ou qualquer outro tópico.</p>
            </div>
        </div>
        
        <div class="p-4 border-t border-gray-800 bg-primary-dark">
            <div class="max-w-4xl mx-auto relative">
                <form id="chat-form" class="relative flex items-end shadow-2xl rounded-xl bg-secondary-dark border border-gray-700 focus-within:border-accent-purple transition-colors duration-300">
                    <textarea 
                        id="user-input" 
                        rows="1" 
                        class="w-full bg-transparent text-white placeholder-gray-500 px-4 py-4 pr-12 rounded-xl focus:outline-none resize-none max-h-48 overflow-y-auto custom-scrollbar"
                        placeholder="Envie uma mensagem para a IA..."
                        required></textarea>
                    
                    <button type="submit" id="send-btn" class="absolute right-2 bottom-2 p-2 rounded-lg bg-gradient-button text-white hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                        </svg>
                    </button>
                </form>
                <div class="text-center mt-2">
                    <p class="text-xs text-gray-500">A Dyson-IA pode cometer erros. Considere verificar informações importantes.</p>
                </div>
            </div>
        </div>
    </main>

    <aside class="w-80 bg-secondary-dark border-l border-gray-800 flex flex-col hidden md:flex" id="history-sidebar">
        
        <div class="p-4 border-b border-gray-800">
            <button onclick="startNewChat()" class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gray-800 hover:bg-gray-700 border border-gray-700 rounded-lg text-white transition duration-200 group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-purple group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span>Novo Chat</span>
            </button>
        </div>

        <div class="flex-1 overflow-y-auto p-2 custom-scrollbar">
            <h3 class="px-2 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Histórico</h3>
            <div id="conversation-list" class="space-y-1">
                <div class="text-center mt-10">
                    <svg class="animate-spin h-5 w-5 text-accent-purple mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
            </div>
        </div>
        
        <div class="p-4 border-t border-gray-800 bg-secondary-dark/50">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-accent-blue to-purple-500 flex items-center justify-center text-xs font-bold text-white">
                    U
                </div>
                <div class="overflow-hidden">
                    <p class="text-sm font-medium text-white truncate">@User.Identity?.Name</p>
                    <p class="text-xs text-gray-400 truncate">Conta Node</p>
                </div>
            </div>
        </div>
    </aside>

</div>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #374151;
        border-radius: 20px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: #4b5563;
    }
</style>

@section Scripts {
    <script>
        // --- Estado Global ---
        let currentConversationId = null;
        const chatContainer = document.getElementById('chat-container');
        const conversationList = document.getElementById('conversation-list');
        const userInput = document.getElementById('user-input');
        const welcomeMessage = document.getElementById('welcome-message');

        // --- Inicialização ---
        document.addEventListener('DOMContentLoaded', () => {
            loadConversations();
            
            // Auto-resize do textarea
            userInput.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
                if(this.value === '') this.style.height = 'auto';
            });

            // Envio com Enter (Shift+Enter para quebra de linha)
            userInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    submitMessage();
                }
            });

            // Submissão do form
            document.getElementById('chat-form').addEventListener('submit', function(e) {
                e.preventDefault();
                submitMessage();
            });
        });

        // --- Funções da API ---

        // 1. Carregar lista de conversas
        async function loadConversations() {
            try {
                const response = await fetch('/api/chat/GetConversations');
                if (response.ok) {
                    const conversations = await response.json();
                    renderConversationList(conversations);
                }
            } catch (error) {
                console.error('Erro ao carregar histórico:', error);
            }
        }

        // 2. Carregar uma conversa específica
        async function loadChat(id) {
            if (currentConversationId === id) return;
            
            try {
                // UI updates
                welcomeMessage.style.display = 'none';
                chatContainer.innerHTML = ''; // Limpa chat atual
                currentConversationId = id;
                highlightActiveConversation(id);

                // Mostra loading
                chatContainer.innerHTML = '<div class="flex justify-center mt-10"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-accent-purple"></div></div>';

                const response = await fetch(`/api/chat/GetConversation/${id}`);
                if (response.ok) {
                    const conversation = await response.json();
                    chatContainer.innerHTML = ''; // Remove loading
                    
                    // Renderiza mensagens antigas
                    conversation.messages.forEach(msg => {
                        appendMessage(msg.sender, msg.text);
                    });
                    
                    scrollToBottom();
                }
            } catch (error) {
                console.error('Erro ao carregar conversa:', error);
            }
        }

        // 3. Enviar mensagem
        async function submitMessage() {
            const text = userInput.value.trim();
            if (!text) return;

            // Limpa input
            userInput.value = '';
            userInput.style.height = 'auto';
            welcomeMessage.style.display = 'none';

            // Adiciona mensagem do usuário na UI (Otimista)
            appendMessage('user', text);
            scrollToBottom();

            // Adiciona indicador de "Digitando..."
            const loadingId = appendLoadingIndicator();
            scrollToBottom();

            try {
                const payload = {
                    text: text,
                    conversationId: currentConversationId // Pode ser null se for nova conversa
                };

                const response = await fetch('/api/chat/GenerateAndSave', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                // Remove loading
                document.getElementById(loadingId).remove();

                if (response.ok) {
                    const data = await response.json();
                    
                    // Adiciona resposta da IA
                    appendMessage('ai', data.aiResponse);
                    
                    // Se era uma nova conversa, atualiza o ID e recarrega a lista lateral
                    if (currentConversationId !== data.conversationId) {
                        currentConversationId = data.conversationId;
                        loadConversations(); // Atualiza lista para mostrar o novo título
                    }
                } else {
                    appendMessage('error', 'Erro ao conectar com Dyson AI. Tente novamente.');
                }
            } catch (error) {
                document.getElementById(loadingId)?.remove();
                appendMessage('error', 'Erro de conexão.');
                console.error(error);
            }
            
            scrollToBottom();
        }

        // --- Funções de UI ---

        function startNewChat() {
            currentConversationId = null;
            chatContainer.innerHTML = '';
            welcomeMessage.style.display = 'block';
            chatContainer.appendChild(welcomeMessage);
            highlightActiveConversation(null); // Remove seleção da lista
        }

        function renderConversationList(conversations) {
            conversationList.innerHTML = '';
            conversations.forEach(c => {
                const btn = document.createElement('button');
                btn.className = `w-full text-left px-3 py-3 rounded-lg text-sm text-gray-300 hover:bg-gray-800 hover:text-white transition-colors truncate mb-1 border border-transparent ${c.id === currentConversationId ? 'bg-gray-800 border-accent-purple/30 text-white' : ''}`;
                btn.id = `conv-${c.id}`;
                // Título da conversa ou texto padrão
                btn.innerText = c.title || 'Nova Conversa';
                btn.onclick = () => loadChat(c.id);
                conversationList.appendChild(btn);
            });
        }

        function highlightActiveConversation(id) {
            // Remove classe ativa de todos
            const allBtns = conversationList.querySelectorAll('button');
            allBtns.forEach(b => {
                b.classList.remove('bg-gray-800', 'border-accent-purple/30', 'text-white');
                b.classList.add('text-gray-300');
            });

            // Adiciona ao atual se existir na lista
            if (id) {
                const activeBtn = document.getElementById(`conv-${id}`);
                if (activeBtn) {
                    activeBtn.classList.add('bg-gray-800', 'border-accent-purple/30', 'text-white');
                    activeBtn.classList.remove('text-gray-300');
                }
            }
        }

        function appendMessage(sender, text) {
            const div = document.createElement('div');
            const isUser = sender === 'user';
            
            div.className = `flex w-full ${isUser ? 'justify-end' : 'justify-start'}`;
            
            const bubbleColor = isUser ? 'bg-gradient-button text-white' : 'bg-gray-800 text-gray-200 border border-gray-700';
            const align = isUser ? 'items-end' : 'items-start';

            // Formatação básica de quebra de linha para HTML
            const formattedText = text.replace(/\n/g, '<br>');

            div.innerHTML = `
                <div class="flex max-w-[85%] md:max-w-[75%] ${isUser ? 'flex-row-reverse' : 'flex-row'} gap-3">
                    <div class="flex-shrink-0 h-8 w-8 rounded-full flex items-center justify-center ${isUser ? 'bg-white/20' : 'bg-accent-purple'}">
                        ${isUser ? 
                            '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" /></svg>' : 
                            '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>'}
                    </div>
                    <div class="relative px-5 py-3 rounded-2xl shadow-md ${bubbleColor} ${isUser ? 'rounded-tr-none' : 'rounded-tl-none'}">
                        <div class="text-sm md:text-base leading-relaxed overflow-x-auto">
                            ${formattedText}
                        </div>
                    </div>
                </div>
            `;
            chatContainer.appendChild(div);
        }

        function appendLoadingIndicator() {
            const id = 'loading-' + Date.now();
            const div = document.createElement('div');
            div.id = id;
            div.className = 'flex w-full justify-start';
            div.innerHTML = `
                <div class="flex gap-3 max-w-[75%]">
                    <div class="flex-shrink-0 h-8 w-8 rounded-full bg-accent-purple flex items-center justify-center">
                         <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    </div>
                    <div class="bg-gray-800 border border-gray-700 px-5 py-4 rounded-2xl rounded-tl-none flex items-center space-x-1">
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0s"></div>
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
                    </div>
                </div>
            `;
            chatContainer.appendChild(div);
            return id;
        }

        function scrollToBottom() {
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
    </script>
}