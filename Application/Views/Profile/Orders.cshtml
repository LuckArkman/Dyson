@{
    ViewData["Title"] = "Meus Pedidos";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="callout callout-success">
            <h5><i class="fas fa-shopping-cart"></i> Meus Pedidos e Serviços</h5>
            Acompanhe todos os seus pedidos, produtos adquiridos e serviços contratados.
        </div>
    </div>
</div>

<!-- Statistics -->
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>0</h3>
                <p>Pedidos Totais</p>
            </div>
            <div class="icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>0</h3>
                <p>Em Andamento</p>
            </div>
            <div class="icon">
                <i class="fas fa-spinner"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>0</h3>
                <p>Concluídos</p>
            </div>
            <div class="icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>R$ 0</h3>
                <p>Valor Total</p>
            </div>
            <div class="icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
        </div>
    </div>
</div>

<!-- Orders List -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> Histórico de Pedidos
                </h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" class="form-control float-right" placeholder="Buscar">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID Pedido</th>
                            <th>Produto/Serviço</th>
                            <th>Data</th>
                            <th>Valor</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Nenhum pedido encontrado.</p>
                                <a href="#" class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i> Explorar Produtos
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Services Categories -->
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-th-large"></i> Categorias de Serviços Disponíveis
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- AI Services -->
                    <div class="col-md-3">
                        <div class="card bg-gradient-primary">
                            <div class="card-body">
                                <div class="text-center">
                                    <i class="fas fa-robot fa-3x mb-3"></i>
                                    <h5>Serviços de IA</h5>
                                    <p class="small">Machine Learning, Computer Vision, NLP</p>
                                    <button class="btn btn-light btn-sm">Ver Serviços</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Blockchain Services -->
                    <div class="col-md-3">
                        <div class="card bg-gradient-success">
                            <div class="card-body">
                                <div class="text-center">
                                    <i class="fas fa-link fa-3x mb-3"></i>
                                    <h5>Blockchain</h5>
                                    <p class="small">Smart Contracts, DApps, Tokens</p>
                                    <button class="btn btn-light btn-sm">Ver Serviços</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Development Services -->
                    <div class="col-md-3">
                        <div class="card bg-gradient-info">
                            <div class="card-body">
                                <div class="text-center">
                                    <i class="fas fa-code fa-3x mb-3"></i>
                                    <h5>Desenvolvimento</h5>
                                    <p class="small">Web, Mobile, Desktop</p>
                                    <button class="btn btn-light btn-sm">Ver Serviços</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Consulting Services -->
                    <div class="col-md-3">
                        <div class="card bg-gradient-warning">
                            <div class="card-body">
                                <div class="text-center">
                                    <i class="fas fa-user-tie fa-3x mb-3"></i>
                                    <h5>Consultoria</h5>
                                    <p class="small">Tecnologia, Negócios, Estratégia</p>
                                    <button class="btn btn-light btn-sm">Ver Serviços</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders Timeline -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-history"></i> Linha do Tempo dos Pedidos
                </h3>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="time-label">
                        <span class="bg-secondary">Sem pedidos ainda</span>
                    </div>
                    <div>
                        <i class="fas fa-shopping-cart bg-gray"></i>
                        <div class="timeline-item">
                            <h3 class="timeline-header">Nenhum pedido realizado</h3>
                            <div class="timeline-body">
                                Quando você realizar pedidos, eles aparecerão aqui.
                            </div>
                        </div>
                    </div>
                    <div>
                        <i class="fas fa-clock bg-gray"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize any needed components
        });
    </script>
}