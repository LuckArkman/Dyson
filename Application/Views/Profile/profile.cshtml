@using Dtos
@model WalletBalance
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row">
    <!-- User Info Card -->
    <div class="col-lg-4 col-md-6">
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">
                    <div class="profile-user-img img-fluid img-circle bg-gradient-primary d-inline-flex align-items-center justify-content-center" 
                         style="width: 100px; height: 100px;">
                        <h1 class="text-white m-0">@ViewBag.UserName.ToString().Substring(0, 1).ToUpper()</h1>
                    </div>
                </div>

                <h3 class="profile-username text-center">@ViewBag.UserName</h3>
                <p class="text-muted text-center">@ViewBag.UserEmail</p>

                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                        <b>Status da Conta</b> 
                        <a class="float-right">
                            <span class="badge badge-success">Ativo</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <b>Membro desde</b> 
                        <a class="float-right">@DateTime.Now.ToString("MMM yyyy")</a>
                    </li>
                    <li class="list-group-item">
                        <b>Último Acesso</b> 
                        <a class="float-right">Agora</a>
                    </li>
                </ul>

                <a asp-controller="Profile" asp-action="Settings" class="btn btn-primary btn-block">
                    <i class="fas fa-cog"></i> <b>Editar Perfil</b>
                </a>
            </div>
        </div>
    </div>

    <!-- Wallet Status Card -->
    <div class="col-lg-8 col-md-6">
        @if (ViewBag.HasWallet ?? false)
        {
            <!-- Wallet Connected -->
            <div class="card card-success card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-wallet"></i> Carteira Web3 Conectada
                    </h3>
                    <div class="card-tools">
                        <span class="badge badge-success">
                            <i class="fas fa-check-circle"></i> Verificada
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="text-muted mb-1">Endereço da Carteira:</p>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" value="@ViewBag.WalletAddress" readonly id="walletAddress">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyWalletAddress()">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="row mt-3">
                                <div class="col-6">
                                    <div class="info-box bg-gradient-success">
                                        <span class="info-box-icon"><i class="fas fa-shield-alt"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Segurança</span>
                                            <span class="info-box-number">Blockchain</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="info-box bg-gradient-info">
                                        <span class="info-box-icon"><i class="fas fa-check"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Status</span>
                                            <span class="info-box-number">Ativo</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-ethereum fa-5x text-success mb-3"></i>
                                <p class="text-muted">Autenticação Web3</p>
                                <a asp-controller="Profile" asp-action="Wallet" class="btn btn-success btn-sm">
                                    <i class="fas fa-wallet"></i> Gerenciar Carteira
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- No Wallet Connected -->
            <div class="card card-warning card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-exclamation-triangle"></i> Carteira Web3 não Conectada
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Conecte sua Carteira MetaMask</h5>
                            <p class="text-muted">
                                Conecte sua carteira MetaMask para desbloquear recursos Web3 e autenticação descentralizada.
                            </p>
                            
                            <div class="alert alert-info">
                                <h5><i class="icon fas fa-info-circle"></i> Benefícios:</h5>
                                <ul class="mb-0">
                                    <li>Login rápido sem necessidade de senha</li>
                                    <li>Segurança aprimorada com criptografia blockchain</li>
                                    <li>Acesso a recursos Web3 e tokens</li>
                                    <li>Contratos inteligentes e transações seguras</li>
                                </ul>
                            </div>
                            
                            <button onclick="linkMetaMaskWallet()" class="btn btn-warning btn-lg">
                                <i class="fab fa-ethereum"></i> Conectar MetaMask
                            </button>
                        </div>
                        <div class="col-md-4 text-center">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/3/36/MetaMask_Fox.svg" 
                                 alt="MetaMask" style="width: 150px; opacity: 0.7;">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Statistics Row -->
