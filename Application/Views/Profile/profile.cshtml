    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>0</h3>
                <p>Contratos Ativos</p>
            </div>
            <div class="icon">
                <i class="fas fa-file-contract"></i>
            </div>
            <a asp-controller="Profile" asp-action="Contracts" class="small-box-footer">
                Ver Contratos <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>0</h3>
                <p>Pedidos Completos</p>
            </div>
            <div class="icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <a asp-controller="Profile" asp-action="Orders" class="small-box-footer">
                Ver Pedidos <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.Balance</h3>
                <p>Saldo em Tokens</p>
            </div>
            <div class="icon">
                <i class="fas fa-coins"></i>
            </div>
            <a asp-controller="Profile" asp-action="Wallet" class="small-box-footer">
                Ver Carteira <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>0</h3>
                <p>Transações</p>
            </div>
            <div class="icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <a asp-controller="Profile" asp-action="Wallet" class="small-box-footer">
                Ver Histórico <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-history"></i> Atividade Recente
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="time-label">
                        <span class="bg-primary">Hoje</span>
                    </div>
                    <div>
                        <i class="fas fa-sign-in-alt bg-blue"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fas fa-clock"></i> Agora</span>
                            <h3 class="timeline-header">Login realizado</h3>
                            <div class="timeline-body">
                                Você fez login no dashboard
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.HasWallet ?? false)
                    {
                        <div>
                            <i class="fas fa-wallet bg-green"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fas fa-clock"></i> Recente</span>
                                <h3 class="timeline-header">Carteira Conectada</h3>
                                <div class="timeline-body">
                                    Sua carteira MetaMask foi conectada com sucesso
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        <i class="fas fa-clock bg-gray"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Link wallet to existing account
        async function linkMetaMaskWallet() {
            try {
                const metaMask = window.metaMaskAuth;
                
                if (!metaMask || !metaMask.isMetaMaskInstalled) {
                    alert('MetaMask não está instalado. Por favor, instale a extensão MetaMask.');
                    window.open('https://metamask.io/download/', '_blank');
                    return;
                }
                
                // Connect wallet
                metaMask.showLoading('Conectando à carteira...');
                const account = await metaMask.connectWallet();
                if (!account) return;

                // Get signature message
                metaMask.showLoading('Preparando assinatura...');
                const message = await metaMask.getSignatureMessage(account, 'link');

                // Sign message
                const signature = await metaMask.signMessage(message, account);

                // Link to account
                metaMask.showLoading('Vinculando carteira...');
                const response = await fetch('/Account/LinkWallet', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        walletAddress: account,
                        signature: signature,
                        message: message
                    })
                });

                metaMask.hideLoading();

                if (response.ok) {
                    const result = await response.json();
                    metaMask.showSuccess(result.message);
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    const error = await response.json();
                    metaMask.showError(error.message || 'Erro ao vincular carteira');
                }
            } catch (error) {
                console.error('Error linking wallet:', error);
                if (window.metaMaskAuth) {
                    window.metaMaskAuth.showError(error.message || 'Erro ao vincular carteira');
                } else {
                    alert('Erro ao vincular carteira: ' + error.message);
                }
            }
        }

        // Copy wallet address to clipboard
        function copyWalletAddress() {
            const walletInput = document.getElementById('walletAddress');
            walletInput.select();
            document.execCommand('copy');
            
            // Show toast notification
            $(document).Toasts('create', {
                class: 'bg-success',
                title: 'Copiado!',
                body: 'Endereço da carteira copiado para a área de transferência.',
                autohide: true,
                delay: 3000,
            });
        }
    </script>
}