@model List<Dtos.ContractDocument>
@{
ViewData["Title"] = "Smart Contracts";
Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <!-- Info Box -->
        <div class="callout callout-info">
            <h5><i class="fas fa-info-circle"></i> Sobre Smart Contracts</h5>
            Gerencie seus contratos inteligentes na blockchain. Visualize, crie e execute contratos de forma segura e transparente.
        </div>
    </div>
</div>

<div class="row">
    <!-- Active Contracts -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>0</h3>
                <p>Contratos Ativos</p>
            </div>
            <div class="icon">
                <i class="fas fa-file-contract"></i>
            </div>
        </div>
    </div>

    <!-- Pending Contracts -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>0</h3>
                <p>Pendentes</p>
            </div>
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
        </div>
    </div>

    <!-- Completed Contracts -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>0</h3>
                <p>Completos</p>
            </div>
            <div class="icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>

    <!-- Total Value -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>R$ 0</h3>
                <p>Valor Total</p>
            </div>
            <div class="icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> Meus Smart Contracts
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalNewContract">
                        <i class="fas fa-plus"></i> Novo Contrato
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Tipo</th>
                            <th>Status</th>
                            <th>Data Criação</th>
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>Nenhum contrato encontrado. Crie seu primeiro smart contract!</p>

                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach(var c in Model)
                            {
                                <tr>
                                    <td>@c.Id</td>
                                    <td>@c.ContractName</td>
                                    <td>@c.ContractType</td>
                                    <td>
                                        @if(c.Status == "Active") { <span class="tag tag-success text-success">Ativo</span> }
                                        else if(c.Status == "Pending") { <span class="tag tag-warning text-warning">Pendente</span> }
                                        else { <span class="tag tag-secondary text-secondary">Executado</span> }
                                    </td>
                                    <td>@c.CreatedAt</td>
                                    <td>@c.GasUsed ETH</td>
                                    <td>
                                        <button class="btn btn-xs btn-primary">Detalhes</button>
                                        <button class="btn btn-xs btn-danger">Pausar</button>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contract Templates -->
