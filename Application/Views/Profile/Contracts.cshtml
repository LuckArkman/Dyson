<div class="modal fade" id="modalNewContract" tabindex="-1" role="dialog" aria-labelledby="createContractModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createContractModalLabel">Implantar Novo Contrato Inteligente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createContractForm">
                    <div class="form-group">
                        <label for="contractName">Nome do Contrato</label>
                        <input type="text" class="form-control" id="contractName" required>
                    </div>
                    <div class="form-group">
                        <label for="contractType">Tipo de Contrato</label>
                        <select class="form-control" id="contractType" required>
                            <option value="NFT">NFT (ERC-721/1155)</option>
                            <option value="Token">Token Fungível (ERC-20)</option>
                            <option value="Governance">Governança (DAO)</option>
                            <option value="Payment">Pagamento/Royalty</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="blockchain">Blockchain</label>
                        <select class="form-control" id="blockchain" required>
                            <option value="ETH">Ethereum</option>
                            <option value="MATIC">Polygon (Matic)</option>
                            <option value="SOL">Solana</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="deploymentCost">Custo Estimado de Implantação (USDC)</label>
                        <input type="number" class="form-control" id="deploymentCost" min="0.01" step="0.01" value="5.00" required>
                        <small class="form-text text-muted">Este valor será cobrado da sua Smart Wallet para pagar as taxas de Gas.</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="confirmDeployBtn">Confirmar Implantação</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="contractDetailsModal" tabindex="-1" role="dialog" aria-labelledby="contractDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contractDetailsModalLabel">Detalhes do Contrato: <strong id="detailContractName"></strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">Endereço:</dt>
                    <dd class="col-sm-8">
                        <code id="detailContractAddress"></code>
                    </dd>

                    <dt class="col-sm-4">Tipo:</dt>
                    <dd class="col-sm-8" id="detailContractType"></dd>

                    <dt class="col-sm-4">Blockchain/ChainID:</dt>
                    <dd class="col-sm-8"><span id="detailBlockchain"></span> (<span id="detailChainId"></span>)</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge" id="detailStatusBadge"></span>
                    </dd>

                    <dt class="col-sm-4">Custo de Deploy:</dt>
                    <dd class="col-sm-8"><span id="detailDeploymentCost"></span> DTC</dd>

                    <dt class="col-sm-4">Gas Usado:</dt>
                    <dd class="col-sm-8"><span id="detailGasUsed"></span> ETH</dd>

                    <dt class="col-sm-4">Modo de Deploy:</dt>
                    <dd class="col-sm-8">
                        <span id="detailDeploymentMode"></span>
                    </dd>

                    <dt class="col-sm-4">Explorer URL:</dt>
                    <dd class="col-sm-8">
                        <a href="#" id="detailExplorerUrl" target="_blank">Ver no Explorer</a>
                    </dd>

                    <dt class="col-sm-4">Notas:</dt>
                    <dd class="col-sm-8" id="detailNotes"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    // Dentro de $(document).ready(function () { ... });
    
    // Novo manipulador para o botão Detalhes
    $('#contractsTable').on('click', '.detail-btn', function() {
        var contractAddress = $(this).data('contract-address');
    
        // 1. Chamar o novo endpoint para buscar os detalhes
        $.ajax({
            url: '@Url.Action("ContractDetails", "Profile")',
            type: 'GET',
            data: { contractAddress: contractAddress },
            success: function (contract) {
                // 2. Preencher o modal com os dados retornados
                $('#detailContractName').text(contract.contractName);
                $('#detailContractAddress').text(contract.contractAddress);
                $('#detailContractType').text(contract.contractType);
                $('#detailBlockchain').text(contract.blockchain);
                $('#detailChainId').text(contract.chainId);
                $('#detailDeploymentCost').text(contract.deploymentCost.toFixed(2));
                $('#detailGasUsed').text(contract.gasUsed ? contract.gasUsed.toFixed(4) : 'N/A');
                $('#detailDeploymentMode').text(contract.deploymentMode);
                $('#detailNotes').text(contract.notes);
    
                // Configurar o link do Explorer
                $('#detailExplorerUrl').attr('href', contract.explorerUrl);
    
                // Configurar o Status Badge
                var statusClass;
                switch (contract.status) {
                    case "Active":
                        statusClass = 'badge-success';
                        break;
                    case "Pending":
                        statusClass = 'badge-warning';
                        break;
                    default:
                        statusClass = 'badge-secondary';
                        break;
                }
                $('#detailStatusBadge').removeClass().addClass('badge ' + statusClass).text(contract.status);
    
                // 3. Exibir o modal
                $('#contractDetailsModal').modal('show');
            },
            error: function (xhr) {
                var errorMessage = xhr.responseJSON ? xhr.responseJSON.message : "Erro desconhecido ao buscar detalhes.";
                alert('Erro ao buscar detalhes do contrato: ' + errorMessage);
            }
        });
    });
        $(document).ready(function () {
            // Função para manipular o clique no botão de confirmação do modal
            $('#confirmDeployBtn').click(function (e) {
                e.preventDefault();

                // 1. Coletar Dados do Formulário
                var data = {
                    ContractName: $('#contractName').val(),
                    ContractType: $('#contractType').val(),
                    Blockchain: $('#blockchain').val(),
                    // Converte para decimal/float
                    DeploymentCost: parseFloat($('#deploymentCost').val()) 
                };

                // 2. Validação básica
                if (!data.ContractName || !data.ContractType || !data.Blockchain || data.DeploymentCost <= 0) {
                    alert('Por favor, preencha todos os campos e garanta que o custo é positivo.');
                    return;
                }
                
                // Desabilitar o botão e mostrar carregamento
                $('#confirmDeployBtn').text('Implantando...').prop('disabled', true);

                // 3. Chamada AJAX para o ProfileController.CreateContract
                $.ajax({
                    url: '@Url.Action("CreateContract", "Profile")', // Rota para ProfileController.CreateContract
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        if (response.success) {
                            alert(response.message + " Endereço: " + response.contractAddress);
                            
                            // 4. Atualizar a tabela dinamicamente (simulando a adição de um novo contrato)
                            var newRow = '<tr>' +
                                '<td>' + response.contractAddress.substring(0, 10) + '...</td>' +
                                '<td>' + data.ContractName + '</td>' +
                                '<td>' + data.ContractType + '</td>' +
                                '<td><span class="tag tag-warning text-warning">Pendente</span></td>' + // Status inicial como Pendente
                                '<td>' + response.costCharged.toFixed(4) + ' ETH</td>' +
                                '<td><button class="btn btn-xs btn-primary">Detalhes</button> <button class="btn btn-xs btn-danger">Pausar</button></td>' +
                                '</tr>';
                            
                            $('#contractsTable tbody').append(newRow);

                            // Fechar modal e redefinir o botão
                            $('#createContractModal').modal('hide');
                            $('#createContractForm')[0].reset();

                        } else {
                            alert('Erro na criação: ' + response.message);
                        }
                    },
                    error: function (xhr) {
                        var errorMessage = xhr.responseJSON ? xhr.responseJSON.message : "Erro desconhecido ao comunicar com o servidor.";
                        alert('Falha na Implantação: ' + errorMessage);
                    },
                    complete: function() {
                         // Restaurar o botão
                        $('#confirmDeployBtn').text('Confirmar Implantação').prop('disabled', false);
                    }
                });
            });
            
            // Limpar formulário ao fechar o modal
            $('#createContractModal').on('hidden.bs.modal', function () {
                $('#createContractForm')[0].reset();
                $('#confirmDeployBtn').text('Confirmar Implantação').prop('disabled', false);
            });
        });
    </script>
}