@model IEnumerable<Dtos.SmartAgent>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Gerenciar Agentes";
}

<!-- DataTables Styles -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.bootstrap4.min.css">

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-table mr-1"></i> Inventário de Agentes
                </h3>
            </div>
            
            <div class="card-body">
                <table id="agentsTable" class="table table-bordered table-striped table-hover projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">Nome</th>
                            <th style="width: 15%">Categoria</th>
                            <th>Status</th>
                            <th>Downloads/Uso</th>
                            <th>Última Atualização</th>
                            <th style="width: 20%">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Name</strong>
                                    <br/>
                                    <small class="text-muted">Created: @item.CreatedAt.ToShortDateString()</small>
                                </td>
                                <td>@item.Category</td>
                                <td>
                                    @if(item.IsPublic) { <span class="badge badge-success">Marketplace</span> }
                                    else { <span class="badge badge-warning">Privado</span> }
                                </td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @(item.Downloads)%"></div>
                                    </div>
                                    <small>@item.Downloads Clones</small>
                                </td>
                                <td>@item.UpdatedAt.ToString("g")</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" asp-action="Make" asp-route-id="@item.id">
                                        <i class="fas fa-folder"></i> Editar
                                    </a>
                                    <button class="btn btn-danger btn-sm" onclick="deleteAgent('@item.id', '@item.Name')">
                                        <i class="fas fa-trash"></i> Excluir
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#agentsTable').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json"
                }
            });
        });

        function deleteAgent(id, name) {
            Swal.fire({
                title: 'Tem certeza?',
                text: `Você excluirá permanentemente "${name}".`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/SmartAgent/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function () {
                            Swal.fire('Excluído!', 'Agente removido com sucesso.', 'success')
                            .then(() => location.reload());
                        },
                        error: function () {
                            Swal.fire('Erro!', 'Não foi possível excluir.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}