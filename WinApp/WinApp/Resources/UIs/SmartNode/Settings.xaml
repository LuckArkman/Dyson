<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="using:WinApp.Resources.Models"
             x:Class="WinApp.Resources.UIs.SmartNode.Settings"
             BackgroundColor="#0B011A">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="DeepPurpleBg">#0B011A</Color>
            <Color x:Key="SidebarNavBg">#120D1D</Color>
            <Color x:Key="HistoryBg">#0D0118</Color>
            <Color x:Key="AccentPurple">#7B52FF</Color>

            <Style TargetType="Label" x:Key="layout-text-Menu">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Padding" Value="25,10,0,0" />
            </Style>
            <Style TargetType="Label" x:Key="menu-layout">
                <Setter Property="TextColor" Value="#888888" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="5,15,0,5" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid ColumnDefinitions="220, *, 280">

            <Grid Grid.Column="0" BackgroundColor="{StaticResource SidebarNavBg}">
                <ScrollView Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="PAINEL PRINCIPAL" Style="{StaticResource menu-layout}" />
                        <Label Text="Dashboard" Style="{StaticResource layout-text-Menu}" />

                        <Label Text="WEB3 / BLOCKCHAIN" Style="{StaticResource menu-layout}" />
                        <Label Text="Smart Wallet" Style="{StaticResource layout-text-Menu}" />
                        <Label Text="Smart Contracts" Style="{StaticResource layout-text-Menu}" />

                        <Label Text="Smart Node" Style="{StaticResource menu-layout}" />
                        <Label Text="Interação Neural" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Configurações do Node" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Agentes de Automação" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Ecossistema Neural" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>


                        <Label Text="Smart Node" Style="{StaticResource menu-layout}" />
                        <Label Text="Interação Neural" Style="{StaticResource layout-text-Menu}" />
                        <Label Text="Configurações" Style="{StaticResource layout-text-Menu}" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

            <!-- corpo com o conteudo do Settings do Node -->
            <Grid Grid.Column="1" RowDefinitions="Auto, *" BackgroundColor="{StaticResource DeepPurpleBg}" Padding="40">
                <VerticalStackLayout Grid.Row="0" Spacing="5" Margin="0,0,0,30">
                    <Label Text="Configurações do Node" FontSize="28" FontAttributes="Bold" TextColor="White" />
                    <Label Text="Gerencie o desempenho e os parâmetros da sua rede neural descentralizada."
                           TextColor="#888888" FontSize="14" />
                </VerticalStackLayout>

                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Spacing="25">

                        <Frame BackgroundColor="#1A1128" BorderColor="#2D1E45" CornerRadius="12" Padding="20">
                            <HorizontalStackLayout Spacing="20">
                                <BoxView WidthRequest="12" HeightRequest="12" Color="#00FF88" VerticalOptions="Center"
                                         CornerRadius="6" />
                                <VerticalStackLayout>
                                    <Label Text="Status do Sistema: Ativo" TextColor="White" FontAttributes="Bold"
                                           FontSize="16" />
                                    <Label Text="Uptime: 14d 05h 22m" TextColor="#888888" FontSize="12" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>

                        <Label Text="PARÂMETROS DE REDE" Style="{StaticResource menu-layout}" />

                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="20">
                            <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                                <Label Text="Alocação de Memória (RAM)" TextColor="White" FontSize="15" />
                                <Label Text="Limite máximo de memória que o nó pode consumir." TextColor="#888888"
                                       FontSize="12" />
                            </VerticalStackLayout>
                            <Entry Grid.Row="0" Grid.Column="1" Text="4GB" TextColor="{StaticResource AccentPurple}"
                                   WidthRequest="100" HorizontalTextAlignment="Center" VerticalOptions="Center" />

                            <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="2">
                                <Label Text="Porta de Comunicação P2P" TextColor="White" FontSize="15" />
                                <Label Text="Porta padrão para sincronização de blocos." TextColor="#888888"
                                       FontSize="12" />
                            </VerticalStackLayout>
                            <Entry Grid.Row="1" Grid.Column="1" Text="30303" TextColor="{StaticResource AccentPurple}"
                                   WidthRequest="100" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                        </Grid>

                        <Label Text="SEGURANÇA E API" Style="{StaticResource menu-layout}" Margin="0,20,0,0" />

                        <VerticalStackLayout Spacing="10">
                            <Label Text="Node API Key" TextColor="White" />
                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                <Frame Grid.Column="0" BackgroundColor="#0D0118" BorderColor="#2D1E45" Padding="12,5"
                                       CornerRadius="8">
                                    <Label Text="sn_live_4a88f72c11094ea9bc..."
                                           TextColor="{StaticResource AccentPurple}" VerticalOptions="Center" />
                                </Frame>
                                <Button Grid.Column="1" Text="Copiar" BackgroundColor="#2D1E45" TextColor="White"
                                        HeightRequest="45" CornerRadius="8" />
                            </Grid>
                        </VerticalStackLayout>

                        <Button Text="Salvar Alterações"
                                BackgroundColor="{StaticResource AccentPurple}"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="50"
                                Margin="0,30,0,0" />
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>