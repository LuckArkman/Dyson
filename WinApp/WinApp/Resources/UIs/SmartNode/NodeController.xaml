<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="using:WinApp.Resources.Models"
             x:Class="WinApp.Resources.UIs.SmartNode.NodeController"
             BackgroundColor="#0B011A">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="DeepPurpleBg">#0B011A</Color>
            <Color x:Key="SidebarNavBg">#120D1D</Color>
            <Color x:Key="HistoryBg">#0D0118</Color>
            <Color x:Key="AccentPurple">#7B52FF</Color>

            <Style TargetType="Label" x:Key="layout-text-Menu">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Padding" Value="25,10,0,0" />
            </Style>
            <Style TargetType="Label" x:Key="menu-layout">
                <Setter Property="TextColor" Value="#888888" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="5,15,0,5" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid ColumnDefinitions="220, *, 280">

            <Grid Grid.Column="0" BackgroundColor="{StaticResource SidebarNavBg}">
                <ScrollView Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="PAINEL PRINCIPAL" Style="{StaticResource menu-layout}" />
                        <Label Text="Dashboard" Style="{StaticResource layout-text-Menu}" />

                        <Label Text="WEB3 / BLOCKCHAIN" Style="{StaticResource menu-layout}" />
                        <Label Text="Smart Wallet" Style="{StaticResource layout-text-Menu}" />
                        <Label Text="Smart Contracts" Style="{StaticResource layout-text-Menu}" />

                        <Label Text="Smart Node" Style="{StaticResource menu-layout}" />
                        <Label Text="Interação Neural" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Configurações do Node" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Agentes de Automação" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Ecossistema Neural" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        
                        <Label Text="Ecossistema Neural" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                        
                        <Label Text="Segurança" Style="{StaticResource layout-text-Menu}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

            <!-- corpo com o conteudo do NodeController do Node -->
            <Grid Grid.Column="1" RowDefinitions="Auto, *" BackgroundColor="{StaticResource DeepPurpleBg}" Padding="40">
    
    <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,30">
        <VerticalStackLayout Grid.Column="0" Spacing="5">
            <Label Text="Node Controller" FontSize="28" FontAttributes="Bold" TextColor="White" />
            <Label Text="Configuração avançada, treinamento e gestão de domínios de conhecimento." TextColor="#888888" />
        </VerticalStackLayout>
        
        <Border Grid.Column="1" Padding="15,5" Stroke="{StaticResource AccentPurple}" StrokeThickness="1" BackgroundColor="#1A1128">
            <Border.StrokeShape><RoundRectangle CornerRadius="20"/></Border.StrokeShape>
            <HorizontalStackLayout Spacing="10">
                <Ellipse Fill="#00FFA3" WidthRequest="8" HeightRequest="8" VerticalOptions="Center"/>
                <Label Text="Node Online: 1.4.2-Neural" TextColor="White" VerticalOptions="Center" FontSize="12"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>

    <ScrollView Grid.Row="1">
        <VerticalStackLayout Spacing="25">
            
            <Border Stroke="#2A1F40" StrokeThickness="1" Padding="20" BackgroundColor="#120D1D">
                <Border.StrokeShape><RoundRectangle CornerRadius="12"/></Border.StrokeShape>
                <VerticalStackLayout Spacing="15">
                    <Label Text="FINE-TUNING E EXPANSÃO" TextColor="{StaticResource AccentPurple}" FontAttributes="Bold" FontSize="12"/>
                    
                    <Grid ColumnDefinitions="*, *, *" ColumnSpacing="15">
                        <Button Grid.Column="0" Text="Upload de Dataset" BackgroundColor="#1A1128" BorderColor="#7B52FF" BorderWidth="1" TextColor="White"/>
                        <Button Grid.Column="1" Text="Iniciar Fine-Tuning" BackgroundColor="#7B52FF" TextColor="White"/>
                        <Button Grid.Column="2" Text="Logs de Treino" BackgroundColor="Transparent" TextColor="#888888"/>
                    </Grid>
                    
                    <ProgressBar Progress="0.4" ProgressColor="{StaticResource AccentPurple}" BackgroundColor="#2A1F40" />
                    <Label Text="Status: Processando novos materiais pedagógicos (40%)" TextColor="#888888" FontSize="11" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Label Text="DOMÍNIOS DE CONHECIMENTO" TextColor="#888888" FontAttributes="Bold" FontSize="12" Margin="0,10,0,0"/>
            
            <Grid ColumnDefinitions="*, *" ColumnSpacing="20">
                <Border Grid.Column="0" Stroke="#2A1F40" StrokeThickness="1" Padding="20" BackgroundColor="#120D1D">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="🌐" FontSize="18"/>
                            <Label Text="Base Distribuída" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Label Text="Conhecimento colaborativo para inferência de rede. Dados não sensíveis." TextColor="#666666" FontSize="12"/>
                        <HorizontalStackLayout Spacing="10" Margin="0,10">
                            <Label Text="Compartilhamento Ativo" TextColor="#888888" VerticalOptions="Center" FontSize="11"/>
                            <Switch IsToggled="True" OnColor="{StaticResource AccentPurple}" Scale="0.8"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" Stroke="#7B52FF" StrokeThickness="1" Padding="20" BackgroundColor="#1A1128">
                    <Border.StrokeShape><RoundRectangle CornerRadius="12"/></Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="🔐" FontSize="18"/>
                            <Label Text="Ecossistema Privado" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Label Text="Dados estratégicos e sensíveis. Isolamento total em container dedicado." TextColor="#A0A0A0" FontSize="12"/>
                        <Label Text="STATUS: ISOLAMENTO ATIVO" TextColor="#00FFA3" FontAttributes="Bold" FontSize="10" Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Border Stroke="#2A1F40" StrokeThickness="1" Padding="20" BackgroundColor="#0D0118">
                <Border.StrokeShape><RoundRectangle CornerRadius="12"/></Border.StrokeShape>
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Orquestrador de Inferência" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="O Node está direcionando automaticamente consultas sensíveis para o Container-Alfa-Privado." TextColor="#666666" FontSize="12"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1" Text="Ver Topologia" BackgroundColor="Transparent" TextColor="{StaticResource AccentPurple}" VerticalOptions="Center"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>